<!-- topic tab -->
<div role="tabpanel" class="tab-pane active py-3" id="topic">
  <div class="row flex-row flex-nowrap">
    <% @all_articles.each do |all_article| %>
      <div class="col-lg-3">
        <%= link_to all_article do %>
          <div class="card">
            <div class="card-block">
              <%= all_article.title %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


<ul>
	<% @topics.each do |topic| %>
		<%#= link_to all_article do %>
			<li>
				<div class="accordion" id="accordionEx">
					<div class="" id="heading<%= topic.id %>">
						<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapse<%= topic.id %>" aria-expanded="false" aria-controls="collapse<%= topic.id %>">
							<%= topic.name %>
						</button>
					</div>
					<ul>
						<li id="collapse<%= topic.id %>" class="collapse" aria-labelledby="heading<%= topic.id %>" data-parent="#accordionEx">
							<ul>
								<% topic.categories.each do |category| %>
									<li>
										<div class="accordion" id="accordionExample">
											<div class="" id="heading<%= category.id %>">
												<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapse<%= category.id %>" aria-expanded="false" aria-controls="collapse<%= category.id %>">
													<%= category.title %>
												</button>
											</div>
											<ul>
												<li id="collapse<%= category.id %>" class="collapse" aria-labelledby="heading<%= category.id %>" data-parent="#accordionEx">
													Article
												</li>
											</ul>
										</div>
									</li>
								<% end %>
							</ul>
							<%# raise %>
						</li>
					</ul>
				</div>
			</li>
		<%# end %>
	<% end %>
</ul>
<%# raise %>

