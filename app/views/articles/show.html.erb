<div class="container">
    <div class="row my-3 pt-3 col-12 breadcrumbs ml-3">
      <%= link_to "Alle Lernfelder", topics_path %> &nbsp
      <div class="breadcrumb-arrow"> > </div> &nbsp
      <%= link_to @topic.name, @topic %> &nbsp
      <div class="breadcrumb-arrow"> > </div> &nbsp
      <%= link_to @category.title, @category %> &nbsp
      <div class="breadcrumb-arrow"> > </div> &nbsp
      <%= @article.title %>
    </div>
  <div class="row mt-3 d-flex justify-content-end">
    <!-- article -->
    <div class="col-6">
      <div class="card">
        <!-- article headline -->
        <div class="row justify-content-between">
          <div class="col-11">
            <h1 class="heading-2">
              <%= @article.title %>
              <!-- <span class="badge badge-primary">
                <%#= 'read' if @article.read_for?(current_user) %>
              </span>
              <span class="badge badge-secondary">
                <%#= 'bookmarked' if @article.bookmarked_for?(current_user) %>
              </span> -->
            </h1>
          </div>
          <div class="col-1 row mx-0 px-0 align-items-center">
              <% if @article.bookmarked_for?(current_user) %>
                <%= link_to unbookmark_article_path(@article),                                 method: :patch,
                                                  class: "" do %>
                  <i class="material-icons-sharp bookmark-icon">bookmark</i>
                <% end %>
              <% else %>
                <%= link_to bookmark_article_path(@article),
                                                method: :post,
                                                class: "" do %>
                  <i class="material-icons-sharp bookmark-icon">bookmark_border</i>
                <% end %>
              <% end %>
            </p>
          </div>
        </div>
        <!-- article description -->
        <div class="row">
          <div class="col-12">
            <h3 class="heading-4">Definition</h3>
            <p><%= @article.description %></p>
          </div>
        </div>
        <!-- article image -->
        <div class="row">
          <% if @article.image.attached? %>
              <div class="col-md-5">
                <div class="article-photo">
                  <!-- Button trigger modal -->
                  <button type="button" class="article-image__thumb" data-toggle="modal" data-target="#ArticleImage">
                    <%= cl_image_tag @article.image.key %>
                  </button>
              </div>
            </div>
          <% end %>
        </div>
        <!-- article chapters -->
        <div class="row">
          <div class="col-12">
            <ul>
              <%= render @article.chapters.sort_by { |chap| chap.title } %>
            </ul>
          </div>
        </div>
      </div>
      <% if @article.image.attached? %>
        <!-- Modal -->
        <div class="modal fade" id="ArticleImage" tabindex="-1" role="dialog" aria-labelledby="ArticleImage" aria-hidden="true">
          <div class="modal-dialog modal-xl" role="img">
            <div class="modal-content">
              <%= cl_image_tag @article.image.key %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-3">
      <div class="card col-12">
      <ul>
        <% @article.chapters.sort_by { |chap| chap.title }.each do |chap| %>
        <li><%= chap.title %></li>
        <% end %>
      </ul>
      </div>
      <% if @article.read_for?(current_user) %>
        <div class="card col-12 mt-3 quizcard">
          <%= link_to "Artikel als gelesen markieren",
                  read_article_path(@article),
                  method: :post,
                  class: "btn btn-outline-primary mt-2"%>
        </div>
      <% elsif @flashcard %>
        <div class="card col-12 mt-3 quizcard">
        Bereit zum Quiz über <%= @article.title %>?
        <%= link_to "Quiz", article_flashcard_path(@article, @flashcard), class: "btn btn-primary" %>
        </div>
      <% end %>
      <!-- author -->
      <div class="card mt-3">
        <% if current_user.author? %>
        <h5 class="badge badge-success">
            <%= @article.draft ? "Entwurf" : "Öffentlich" %>
          </h5>
          <h5 class="badge badge-primary">
            <%= "#{current_user.first_name.present? ? @article.main_author.first_name : 'Kein Author'}" %>
          </h5>
          <h5>Editors:</h5>
          <% @article.editors.each do |editor| %>
          <h5 class="badge badge-primary">
            <%= editor.first_name %>
          </h5>
          <% end %>
        <% end %>
        <% if current_user.author? %>
            <% if @article.draft? %>
              <%= link_to 'Artikel veröffentlichen', publish_article_path(@article),
                                              method: :post,
                                              class: "btn btn-success mb-2" %>
            <% else %>
              <%= link_to 'Artikel nicht veröffentlichen', unpublish_article_path(@article),                                method: :patch,
                                               class: "btn btn-danger mb-2" %>
            <% end %>
            <%= link_to 'Artikel anpassen',
                        edit_article_path(@article),
                        class: "btn btn-warning mb-2" %>
            <%= link_to 'Quiz anpassen',
                        flashcards_article_path(@article),
                        class: "btn btn-warning mb-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

