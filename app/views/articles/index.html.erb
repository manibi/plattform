<div class="container">
  <%= link_to "All nested topics", topics_path, class: "btn btn-primary" %>

  <h1>Articles</h1>
  <h3>Bookmarked Articles <%= @bookmarked_articles.size %></h3>
  <% if @bookmarked_articles.blank? %>
      <p>No bookmarked articles</p>
  <% else %>
      <ul>
      <%= render @bookmarked_articles %>
    </ul>
  <% end %>

  <h3>Upcoming Articles <%= @upcoming_articles.size %></h3>
  <ul>
    <%= render @upcoming_articles %>
  </ul>

  <h3>Read Articles <%= @read_articles.size %></h3>
  <ul>
    <%= render @read_articles %>
  </ul>
</div>