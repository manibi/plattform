<div class="container">
  <div class="row">
    <div class="col">
      <h1>Library overview</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row mt-5">
    <div class="col">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" id="myTab" role="tablist">

        <li class="nav-item">
          <a class="nav-link active" id="topics-tab" data-toggle="tab" href="#topics" role="tab" aria-controls="topics" aria-selected="true">Topics</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" id="categories-tab" data-toggle="tab" href="#categories" role="tab" aria-controls="categories" aria-selected="true">Categories</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" id="articles-tab" data-toggle="tab" href="#articles" role="tab" aria-controls="articles" aria-selected="true">Articles</a>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="topics" role="tabpanel" aria-labelledby="topics-tab">
          <ul class="list-group list-group-flush">
            <%= render partial: "topics/author_topic", collection: @topics, as: :topic %>
          </ul>
        </div>

        <div class="tab-pane" id="categories" role="tabpanel" aria-labelledby="categories-tab">
          <ul class="list-group list-group-flush">
            <%= render partial: "categories/author_category", collection: @categories, as: :category %>
          </ul>
        </div>

        <div class="tab-pane" id="articles" role="tabpanel" aria-labelledby="articles-tab">
          <ul class="list-group list-group-flush">
            <%= render partial: "author_article_list", collection: @all_articles, as: :article %>
          </ul>
        </div>
      </div>
    </div>
  </div>

</div>