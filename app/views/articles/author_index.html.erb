<div class="container">
  <div class="row">
    <div class="col">
      <h1>Library overview</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h4>Topics</h4>
        <ul class="list-group list-group-flush">
          <%= render partial: "topics/author_topic", collection: @topics, as: :topic %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h4>Modules</h4>
        <ul class="list-group list-group-flush">
          <%= render partial: "categories/author_category", collection: @categories, as: :category %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h4>Articles</h4>
      <ul class="list-group list-group-flush">
          <%= render partial: "author_article_list", collection: @all_articles, as: :article %>
      </ul>
    </div>
  </div>
</div>