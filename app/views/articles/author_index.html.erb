<div class="container">
  <div class="row mt-5">
    <div class="row mt-5">
    <div class="col">
      <h3>Lernfelder</h3>
    </div>
  </div>

  <div class="row">
    <% current_user.profession.topics.all.each do |topic| %>
      <%= link_to topic do %>
        <div class="col">
          <div class="card topic-card justify-content-between  mt-3">
            <div class="card-name pt-1 pb-3">
              <%= topic.name %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  </div>
</div>