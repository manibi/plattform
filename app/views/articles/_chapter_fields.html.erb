<div class="nested-fields">
  <div class="card mt-5">
    <div class="card-body">
      <div class="form-group">
        <%= f.text_field :title, placeholder: "Beispiel Titel", readonly: true, class: "form-control chapter-title-disabled"%>
      </div>
      <div class="form-group">
        <%#= f.label "Kapitel" %>
        <%= f.rich_text_area :content, placeholder: "Kapitel Inhalte eintragen..." %>
      </div>
    </div>
  </div>

  <%#= link_to_remove_association "Remove chapter", f, class: 'btn btn-primary btn-xs mt-1' %>
</div>