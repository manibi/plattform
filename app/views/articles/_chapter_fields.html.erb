<div class="nested-fields m-1">
  <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Once upon a time...", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, placeholder: "Chapter content...", class: "form-control"%>
  </div>
  <%= link_to_remove_association "Remove chapter", f, class: 'btn btn-primary btn-xs mt-1' %>
</div>