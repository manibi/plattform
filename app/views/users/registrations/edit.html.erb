<div class="container py-3">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Passwort ändern</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label "Passwort" %> - <i><%= @minimum_password_length %> Zeichen Minimum</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <!-- <br /> -->
            <em class="px-2">(Feld frei lassen, falls du dein Passwort nich ändern möchtest)</em>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label "Passwort wiederholen" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "Aktuelles Passwort" %><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
            <em class="px-2">(Bitte trage dein altes Passwort ein, um das Neue zu authorisieren)</em>
        </div>

        <div class="actions mt-3">
          <%= f.submit "Aktualisieren", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <%#= link_to "Zurück", :back, class: "mt-3 btn btn-outline-primary w-100" %>
    </div>
  </div>
</div>



