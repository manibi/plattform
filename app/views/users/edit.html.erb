<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Update profile</h2>
      <%= form_with(model: @user, local: true) do |f| %>
        <div class='form-group'>
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :exam_day %>
          <%= f.date_field :exam_day, required: true, class: 'form-control' %>
          <small id="emailHelp" class="form-text text-muted">*Required</small>
        </div>
        <div class='form-group'>
          <%= f.label :birth_date, 'Date of birth' %>
          <%= f.date_field :birth_date, class: 'form-control' %>
        </div>
        <%= f.submit 'Update', class: "btn btn-primary w-100" %>
      <% end %>


      <%= link_to "Change your password", edit_user_registration_path, class: 'btn btn-danger mt-3 w-100' %>
      <% unless current_user.exam_day.nil? %>
        <%= link_to "Dashboard", dashboard_path, class: 'btn btn-success mt-3 w-100' %>
      <% end %>
    </div>
  </div>
</div>