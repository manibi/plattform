<div class="container py-3">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Profil anpassen</h2>
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: @user %>
        <div class='form-group'>
          <%= f.label "Vorname" %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label "Nachname" %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <% if current_user.student? %>
          <div class='form-group'>
            <%= f.label "Datum der Abschlussprüfung" %>
            <%= f.date_field :exam_date, required: true, class: 'form-control' %>
            <small id="emailHelp" class="form-text text-muted">*notwendig</small>
          </div>
        <% end %>
        <div class='form-group'>
          <%= f.label :birth_date, 'Geburtsdatum' %>
          <%= f.date_field :birth_date, class: 'form-control' %>
        </div>
        <%= f.submit 'Aktualisieren', class: "btn btn-primary w-100" %>
      <% end %>


      <%= link_to "Passwort ändern", edit_user_registration_path, class: 'btn btn-warning mt-3 w-100' %>
      <% unless current_user.exam_date.nil? %>
        <%= link_to "Dashboard", dashboard_path, class: 'btn btn-success mt-3 w-100' %>
      <% end %>
    </div>
  </div>
</div>