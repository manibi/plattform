<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2 class="display-4">Generate Students</h2>
    </div>
  </div>

  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <p class="lead">You will generate new students</p>
    </div>
  </div>

  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <%= form_with url: generate_student_path,
                    local: true do |f| %>

        <div class="form-group">
          <%= f.label "Company", class: "mr-2" %>
          <%= f.select "company_id",
                options_for_select(
                  @companies.map { |company| [company.name, company.id] }
                ) %>
        </div>

        <div class="form-group">
          <%= f.label "Profession", class: "mr-2" %>
          <%= f.select "profession_id",
                options_for_select(
                  @professions.map { |profession| [profession.name, profession.id] }.select { |p| p[0] != "Controlling" }
                ) %>
        </div>


        <div class="form-group5">
          <%= f.label :students_number, class: "mr-2" %>
          <%= f.number_field :students_number,
                            class: "form-control",
                            style: "width: 100px;" %>
        </div>

        <%= submit_tag "Generate", class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>