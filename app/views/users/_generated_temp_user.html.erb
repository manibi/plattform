<tr>
  <th scope="row"><%= user_counter + 1 %></th>
  <td><%= user.username %></td>
  <td><%= user.password %></td>
  <td><%= user.profession.name %></td>
  <td><%= user.email %></td>
  <td style="min-width: 130px;">
    <%= link_to "Send Email",     temporary_user_credential_send_temp_user_credentials_path(user.id),
    class: "btn #{user.sent_email ? 'btn-danger' : 'btn-success'}" %>
  </td>
  <% if user.feedback %>
<!-- Button trigger modal -->
    <td>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newTempUserFeedback">
        Feedback
      </button>
    </td>
  <% end %>
</tr>


<% if user.feedback %>
  <!-- Modal -->
  <div class="modal fade" id="newTempUserFeedback" tabindex="-1" role="dialog" aria-labelledby="newTempUserFeedbackLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newTempUserFeedbackLabel">Feedback</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= user.feedback %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
