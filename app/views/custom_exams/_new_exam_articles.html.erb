<% if @add_articles %>
  <% @category.articles.each do |article| %>
      <div class="article">
        <label>
            <%= check_box_tag "exam[article_id]",
                              article.id,
                              false,
                              id: dom_id(article)
                              %>
            <%= article.title %>
          </label>
      </div>
  <% end %>
<% end %>