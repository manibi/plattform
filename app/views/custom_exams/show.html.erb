<div class="container">
  <div class="row">
    <h2 class="heading-1">Pr√ºfungssimulation vom <%= @exam.created_at.to_date %></h2>
  </div>

  <div class="container">
    <div class="row">
      <h2>Ergebnisse</h2>
    </div>
    <div class="row">
      <div class="col">
        Punkte: <%= @correct_answers %> / <%= @exam.questions.count %>
      </div>
      <div class="col">
        Richtig beantwortet: <%= @correct_answers %>
      </div>
      <div class="col">
        Falsch beantwortet: <%= @exam.questions.size - @correct_answers %>
      </div>
          <div class="col">
        Nicht beantwortet: <%= @exam.unanswered_questions %>
      </div>
    </div>

    <% @questions.each.with_index do |q, i| %>
      <div class="row">
       <div class="col">
         <%= link_to "Frage #{i + 1}", custom_exam_flashcard_path(@exam, @exam.questions[i]) %>
       </div>
       <div class="col">
        <% if @exam.answer_for(q)&.correct %>
          <b class="bg-success">Richtig</b>
        <% elsif !@exam.answer_for(q)&.answered %>
          <span class="bg-warning">Nicht beantwortet</span>
        <% else %>
          <em class="bg-danger">Falsch</em>
        <% end %>
       </div>
      </div>
    <% end %>
  </div>
</div>