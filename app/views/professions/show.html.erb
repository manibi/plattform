<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="display-4">Control panel</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <%= render "pages/menu_create_records" %>
    </div>
  </div>

  <div class="row">
    <% @profession.topics.all.each do |topic| %>
      <%= link_to topic do %>
        <div class="col">
          <div class="card topic-card justify-content-between  mt-3">
            <div class="card-name pt-1 pb-3">
              <%= topic.name %>
            </div>
            <%= link_to "Edit", edit_topic_path(topic), class: "btn btn-warning" %>
            <%= link_to "Delete", topic_path(topic), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>