<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Update profile</h2>
      <%= form_with(model: @company, local: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: @company %>
        <div class='form-group'>
          <%= f.label :name %>
          <%= f.text_field :name, readonly: true, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :address %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :contact_person_name, 'Contact person' %>
          <%= f.text_field :contact_person_name, class: 'form-control' %>
        </div>
        <%= f.submit 'Update', class: "btn btn-primary w-100" %>
      <% end %>

      <%= link_to "Change your password", edit_company_registration_path, class: 'btn btn-danger mt-3 w-100' %>
    </div>
  </div>
</div>