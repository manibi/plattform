<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= current_company.name %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% @users.each do |user| %>
        <%= link_to user_company_path(user.company, user) do %>
          <div class="card">
            <div class="card-body">
               <h4><%= display_user_name(@user) %></h4>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>