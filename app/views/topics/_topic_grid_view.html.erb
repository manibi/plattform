<!-- topic tab -->
<div role="tabpanel" class="tab-pane active py-3" id="topic">
  <div class="row">
    <% @topics.each do |topic| %>
      <div class="col-lg-3 my-2">
        <%= link_to topic do %>
          <div class="card topic-card">
            <div class="card-name pt-1 pb-4">
              <%= topic.name %>
            </div>
            <div class="card-progress">
                <div class="row col-12 justify-content-between">
                  <div class="read-text">
                    Gelesen
                  </div>
                  <div class="progress-percentage">
                    <%= '%.2f' % ((@read_categories.select { |c| c.topic_id == topic.id }.count * 100) / @categories.select { |c| c.topic_id }.count) %>%
                  </div>
                </div>
                <progress class="w-100" value="<%= (@read_categories.select { |c| c.topic_id == topic.id }.count) %>" max="<%= (@categories.select { |c| c.topic_id }.count) %>"></progress>
                <%# raise %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
