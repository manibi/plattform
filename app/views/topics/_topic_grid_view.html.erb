<!-- topic tab -->
<div role="tabpanel" class="tab-pane active py-3" id="topic">
  <div class="row flex-row flex-nowrap">
    <% @topics.each do |topic| %>
      <div class="col-lg-3 my-2">
        <%= link_to topic do %>
          <div class="card topic-card">
            <div class="card-name">
              <%= topic.name %>
              <%= @categories.map { |c| c.topic_id }.count(topic.id) } %>
              <% raise %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
