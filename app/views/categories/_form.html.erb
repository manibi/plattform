<%= render "devise/shared/error_messages", resource: object  %>
<%= form_with model: object, local: true do |f| %>

  <div class="form-group">
    <%= f.label "Topic:" %>
    <%= f.select "topic_id",
          options_for_select(
            @topics.map { |topic| [topic.name, topic.id] },
            @category.topic ? @category.topic.id : false # set topic for edit form
          ) %>
  </div>

  <div class="form-group">
    <%= f.label "Titel" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label "Definition" %>
  <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit "Aktualisieren", class: "btn btn-primary" %>
<% end %>