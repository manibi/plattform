<!-- topic tab -->
<div role="tabpanel" class="tab-pane active py-3" id="topic">
  <div class="row">
    <% @category.articles.each do |article| %>
      <div class="col-lg-3 my-2">
        <%= link_to article do %>
          <div class="card topic-card">
            <div class="card-name pt-1 pb-4">
              <%= article.title %>
            </div>
            <div class="card-progress">
              <% if @read_articles.include?(article) %>
                <div class="row col-12 justify-content-between">
                  <div class="read-text">
                    Gelesen
                  </div>
                  <div class="progress-percentage">
                    100%
                  </div>
                </div>
                <progress class="w-100" value="100" max="100"></progress>
              <% else %>
                <div class="row col-12 justify-content-between">
                  <div class="read-text">
                    Gelesen
                  </div>
                  <div class="progress-percentage">
                    0%
                  </div>
                </div>
                <progress class="w-100" value="0" max="100"></progress>
              <% end %>
            </div>
            <div class="card-stats">
              <i class="material-icons-sharp sidebar-icon">library_books</i>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<%# raise %>
