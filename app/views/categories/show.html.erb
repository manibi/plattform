<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="heading-2">
        <%= @category.title %>
      </h2>
    </div>
  </div>

  <div class="row">
    <% @category.articles.each do |article| %>
      <div class="col-4">
        <%= link_to article do %>
          <div class="card">
            <div class="card-body">
              <%= article.title %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>