<!DOCTYPE html>
<html>
  <head>
    <title>Mozubi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="container-fluid">
      <!-- headbar -->
      <div class="row">
        <!-- logo -->
        <div class="col-2 text-center">
        <%= image_tag "https://res.cloudinary.com/dmz84tdv1/image/upload/v1575470796/logo_icon_white.png", style: 'width:50%; background-color:green;' %>
        </div>
        <!-- navbar -->
        <div class="col-10">
          <%= render 'shared/navbar' %>
        </div>
      </div>

      <!-- content -->
      <div class="row">
        <!-- sidebar -->
        <div class="col-2">
          <%= render 'shared/sidebar' %>
        </div>
        <!-- content -->
        <div class="col-10">
        <% if user_signed_in? && current_user.exam_date.blank? %>
          <%= render 'shared/reminder', message: User::UPDATE_PROFILE_MESSAGE %>
        <% end %>
        <%= render 'shared/flashes' %>
        <%= yield %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
        <!-- debug: display params in develpment -->
        <%#= debug(params) if Rails.env.development? %>
        </div>
      </div>
    </div>
    

    <!-- debug: display params in develpment -->
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
