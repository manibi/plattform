<!-- quiz topic tab -->
<div class="row">
  <% @articles.each do |article| %>
    <div class="col-lg-3 my-2">
      <div class="card topic-card justify-content-between">
        <div class="card-name pt-1 pb-4">
          <%= article.title %>
        </div>
        <div class="card-bottom">
          <div class="row justify-content-around">
            <% if article.read_for?(current_user) %>
              <div class="col-6 m-1 btn btn-primary">
                <%= link_to [article, article.flashcards.first] do %>
                Zum Quiz
                <% end %>
              </div>
            <% else %>
              <div class="col-6 m-1 btn btn-outline-primary">
                <%= link_to article, :"data-turbolinks" => false do %>
                Zum Artikel
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>