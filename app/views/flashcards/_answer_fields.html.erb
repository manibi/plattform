<div class="nested-fields m-1">
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, placeholder: "Answer content...", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :explanation %>
    <%= f.text_area :explanation, placeholder: "Wrong, because...", class: "form-control"%>
  </div>
  <%= link_to_remove_association "remove answer", f, class: 'btn btn-primary btn-xs mt-1' %>
</div>