<div class="nested-fields mt-5">
  <div class="form-group">
    <%= f.label "Antwortmöglichkeit" %>
    <%= f.text_area :content, placeholder: "Antworttext...", style: "width: 100%;" %>
  </div>
  <div class="form-group">
    <%= f.label "Erklärung (Richtig, weil/Falsch, weil)" %>
