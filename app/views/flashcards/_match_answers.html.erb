<h3>Ordne die Antworten zu</h3>
<div class="card-body">
  <h4><%= flashcard.content %></h4>
  <div class="row">
    <!-- The fixed answers -->
    <div class="col">
      <ul class="fixed-answers" id="fixed-answers">
        <% @static_answers.each do |answer| %>
            <li class=
              <% if action_name == "answer_correct_order"%>
                <%= @is_answer_correct ? "correct-answer" : "false-answer"  %>
              <% end %>
            >
              <%= answer.id %> - <%= answer.content %>
            </li>
        <% end %>
      </ul>
    </div>
    <div class="col">
      <%= form_for answer_correct_order_article_flashcard_path(@article, @flashcard), url: {action: "answer_correct_order"}, method: :post, html: { id: "flashcardAnswerForm", "data-form-submitted": false } do |f| %>

        <!-- The answers to drag, and actually check if correct -->
        <ul class="answers" id="answers-drag">
          <% @dragabble_answers.shuffle.each do |answer| %>
              <li class=
                <% if action_name == "answer_correct_order"%>
                  <%= @is_answer_correct ? "correct-answer" : "false-answer"  %>
                <% end %>
              >
                <%= answer.content %>
                <%= hidden_field_tag "flashcard[answer][#{answer.id}]",
                                      answer.id
                %>
              </li>
          <% end %>
        </ul>
    </div>
  </div>

  <% if !@exam_flashcard || (@exam && !@exam.submitted) %>
    <%= f.submit "Prüfen",
                  class: "flashcard-btn btn btn-primary", :"data-turbolinks" => false if action_name == "show" %>
  <% end %>
  <%= link_to "Nächste",
            next_flashcard_article_flashcard_path(@article, @flashcard), id: "nextFlashcard",
            class: "flashcard-btn btn btn-primary", :"data-turbolinks" => false if action_name == "answer_correct_order" %>
  <% end %>
</div>
