<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="display-4">Control panel</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <h4>Create a new...</h4>
      <div class="row">
        <%= link_to "Admin", new_user_path, class: "btn btn-danger ml-3" %>
        <%= link_to "Profession", new_profession_path, class: "btn btn-primary ml-3" %>
        <%= link_to "Company", new_company_path, class: "btn btn-primary ml-3" %>
        <%= link_to "Author", new_author_path, class: "btn btn-primary ml-3" %>
        <%= link_to "Student", new_student_path, class: "btn btn-primary ml-3" %>
        <%= link_to "Topic", new_topic_path, class: "btn btn-success ml-3" %>
        <%= link_to "Module", new_category_path, class: "btn btn-info ml-3" %>
        <%= link_to "Article", new_article_path, class: "btn btn-secondary ml-3" %>
        <%= link_to "Flashcard", new_flashcard_path, class: "btn btn-warning ml-3" %>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" id="myTab" role="tablist">

        <li class="nav-item">
          <a class="nav-link active" id="admins-tab" data-toggle="tab" href="#admins" role="tab" aria-controls="admins" aria-selected="true">Admins</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" id="authors-tab" data-toggle="tab" href="#authors" role="tab" aria-controls="authors" aria-selected="true">Authors</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" id="students-tab" data-toggle="tab" href="#students" role="tab" aria-controls="students" aria-selected="true">Students</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" id="companies-tab" data-toggle="tab" href="#companies" role="tab" aria-controls="companies" aria-selected="false">Companies</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" id="professions-tab" data-toggle="tab" href="#professions" role="tab" aria-controls="professions" aria-selected="false">Professions</a>
        </li>

      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="admins" role="tabpanel" aria-labelledby="admins-tab">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Password</th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "users/generated_user", collection: UserCredential.admin, as: :user %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane" id="authors" role="tabpanel" aria-labelledby="authors-tab">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Password</th>
                <th scope="col">Profession</th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "users/generated_user", collection: UserCredential.author, as: :user %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane" id="students" role="tabpanel" aria-labelledby="students-tab">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Company</th>
                <th scope="col">Profession</th>
                <th scope="col">Username</th>
                <th scope="col">Password</th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "users/generated_user", collection: UserCredential.student, as: :user %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane" id="companies" role="tabpanel" aria-labelledby="companies-tab">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Password</th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "companies/generated_company", collection: CompanyCredential.all, as: :company %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane" id="professions" role="tabpanel" aria-labelledby="professions-tab">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "professions/admin_profession", collection: Profession.all, as: :profession %>
            </tbody>
          </table>
        </div>


      </div>
    </div>
  </div>
</div>