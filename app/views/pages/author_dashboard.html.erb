<div class="container m-5">
  <div class="row mb-5">
    <div class="col-md-8">
      <h2 class="display-4">
        Willkommen<%= ", #{current_user.first_name}" if current_user.first_name.present? %>!
      </h2>
      <h4><%= current_user.profession.name %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <h4>Erstelle ein neues...</h4>
      <div class="row">
        <%#= link_to "Lernfeld", new_topic_path, class: "btn btn-success ml-3" %>
        <%#= link_to "Kategorie", new_category_path, class: "btn btn-info ml-3" %>
        <%= link_to "Artikel", new_article_path, class: "btn btn-primary ml-3" %>
        <%= link_to "Quiz", new_flashcard_path, class: "btn btn-warning ml-3" %>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="authored_drafts-tab" data-toggle="tab" href="#authored_drafts" role="tab" aria-controls="authored_drafts" aria-selected="true">Erstellte Artikel(Entwurf)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="authored_articles-tab" data-toggle="tab" href="#authored_articles" role="tab" aria-controls="authored_articles" aria-selected="true">Erstellte Artikel(Publizierte)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="edited_articles-tab" data-toggle="tab" href="#edited_articles" role="tab" aria-controls="edited_articles" aria-selected="false">Bearbeitete Artikel</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="draft_flashcards-tab" data-toggle="tab" href="#draft_flashcards" role="tab" aria-controls="draft_flashcards" aria-selected="false">Erstellte Quizzes(Entwurf)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="authored_flashcards-tab" data-toggle="tab" href="#authored_flashcards" role="tab" aria-controls="authored_flashcards" aria-selected="false">Erstellte Quizzes(Publizierte)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="edited_flashcards-tab" data-toggle="tab" href="#edited_flashcards" role="tab" aria-controls="edited_flashcards" aria-selected="false">Bearbeitete Quizzes</a>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="authored_drafts" role="tabpanel" aria-labelledby="authored_drafts-tab">
          <ul class="list-group list-group-flush">
              <%= render partial: "articles/author_article_list", collection: current_user.draft_articles, as: :article %>
            </ul>
        </div>
        <div class="tab-pane active" id="authored_articles" role="tabpanel" aria-labelledby="authored_articles-tab">
          <ul class="list-group list-group-flush">
              <%= render partial: "articles/author_article_list", collection: current_user.published_articles, as: :article %>
            </ul>
        </div>
        <div class="tab-pane" id="edited_articles" role="tabpanel" aria-labelledby="edited_articles-tab">
          <ul class="list-group list-group-flush">
            <%= render partial: "articles/author_article_list", collection: current_user.edited_articles, as: :article %>
          </ul>
        </div>
        <div class="tab-pane" id="draft_flashcards" role="tabpanel" aria-labelledby="draft_flashcards-tab">
          <ul class="list-group list-group-flush">
            <%= render partial: "flashcards/author_flashcard_list_item", collection: current_user.draft_flashcards, as: :flashcard %>
          </ul>
        </div>
        <div class="tab-pane" id="authored_flashcards" role="tabpanel" aria-labelledby="authored_flashcards-tab">
          <ul class="list-group list-group-flush">
            <%= render partial: "flashcards/author_flashcard_list_item", collection: current_user.published_flashcards, as: :flashcard %>
          </ul>
        </div>
        <div class="tab-pane" id="edited_flashcards" role="tabpanel" aria-labelledby="edited_flashcards-tab">
          <ul class="list-group list-group-flush">
            <%= render partial: "flashcards/author_flashcard_list_item", collection: current_user.edited_flashcards, as: :flashcard %>
          </ul>
        </div>
      </div>
    </div>
  </div>

</div>
