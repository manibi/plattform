<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= current_company.name %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% @users.each do |user| %>
        <%= link_to user_path(user) do %>
          <div class="card">
            <div class="card-body">
            <% if user&.first_name&.last_name %>
              <h4>
                <%= "#{user.first_name.capitalize} + #{user.last_name.capitalize}" %>
              </h4>
            <% else %>
              <h4>Incomplete Profile</h4>
            <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>