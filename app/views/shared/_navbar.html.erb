<% if user_signed_in? && !company_signed_in? %>
	<ul class="nav nav-pills nav-fill">
		<li class="nav-item col-8">
			<%= form_with url: search_path,
			                    local: true,
			                    method: :get,
			                    html: {
			                      class:"form-inline w-100" } do |f| %>
	        <%= f.text_field :query,
	          class: "form-control",
	          placeholder: "Suche nach einem Lernfeld, einer Kategorie oder einem Artikel...",
	          style: "width: 100%;",
	          id: "autocompleteSearch"
	        %>
	        <%= submit_tag "Search", class: "btn btn-primary d-none" %>
	      <% end %>
		</li> 
		<li class="nav-item">
			<!-- notifications -->
		</li>
		<li class="nav-item">
			<%= link_to 'Profil', profile_path, class: "btn btn-primary" %>
		</li>
		<li class="nav-item">
			<!-- dropdown with 
			- account settings (&logout) -->
		  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
		</li>	
<% elsif company_signed_in? %>
	<ul class="nav nav-pills nav-fill">
        <li class="nav-item">
          <%= link_to "Profil", company_profile_path, class: "btn btn-primary" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_company_session_path, method: :delete, class: "nav-link" %>
        </li>
<% else %>
<div class="row">
	<!-- left navbar logo -->
	<div class="col-10">
	  <%= image_tag "https://res.cloudinary.com/mozubi/image/upload/v1582744555/Mozubi/Logo_schwarz_e4slbq.png", style: 'width:20%' %>
	</div>
	<ul class="nav nav-pills nav-fill align-items-center justify-content-end">
		<div>
	        <li class="nav-item">
	          <%= link_to "Azubi Login", new_user_session_path, class: "landing-nav" %>
	        </li>
	        <li class="nav-item">
	          <%= link_to "Unternehmen Login", new_company_session_path, class: "landing-nav" %>
	        </li>
		</div>
<% end %>
</ul>