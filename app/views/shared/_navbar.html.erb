<% if user_signed_in? && !company_signed_in? %>
	<ul class="nav nav-pills nav-fill">
		<li class="nav-item col-8 search-form-control">
			<%= form_with url: search_path,
			                    local: true,
			                    method: :get,
			                    html: {
			                      class:"form-inline w-100" } do |f| %>
	        <%= f.text_field :query,
	          class: "form-control",
	          placeholder: "Suche nach einem Lernfeld, einer Kategorie oder einem Artikel...",
	          style: "width: 100%",
	          id: "autocompleteSearch"
	        %>
		    <button name="button" type="submit" class="btn btn-flat d-flex align-items-center justify-content-center">
		      <i class="fas fa-search"></i> &nbsp
		      <div>Search</div>
		    </button>
	        <%= submit_tag "Search", class: "btn btn-primary d-none" %>
	      <% end %>
		</li>
		<li class="nav-item">
			<!-- notifications -->
		</li>
		<li class="nav-item">
			<%= link_to 'Profil', profile_path, class: "btn btn-primary" %>
		</li>
		<li class="nav-item">
			<!-- dropdown with 
			- account settings (&logout) -->
		  <%= link_to "Ausloggen", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary" %>
		</li>	
	</ul>
<% elsif company_signed_in? %>
	<ul class="nav nav-pills nav-fill">
        <li class="nav-item">
          <%= link_to "Profil", company_profile_path, class: "btn btn-primary" %>
        </li>
        <li class="nav-item">
          <%= link_to "Ausloggen", destroy_company_session_path, method: :delete, class: "btn btn-outline-primary" %>
        </li>
	</ul>
<% else %>
